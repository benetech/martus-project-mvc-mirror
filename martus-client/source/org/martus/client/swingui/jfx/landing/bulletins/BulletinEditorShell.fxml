<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<StackPane fx:id="headerPane" />
	</top>
	<center>
		<StackPane fx:id="bodyPane" />
	</center>
	<bottom>
		<VBox>
   			<children>
   			<StackPane fx:id="footerPane" />
            <BorderPane>
               <left>
              		<HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
              			<children>
							<SplitMenuButton fx:id="saveSplitMenuButton" text="%Button.versionBulletin" onAction="#onSaveBulletin" styleClass="split-menu-button">
				    			<items>
				        			<MenuItem onAction="#onVersionBulletin" text="%Button.createBulletinCopy" styleClass="split-menu-button" />
				    			</items>
							</SplitMenuButton>
						</children>
					</HBox>
               </left>
               <right>
         			<HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            			<children>
            				<Button fx:id="shareButton" onAction="#onShareBulletin" text="%Button.shareBulletin" styleClass="defaultButton" >
								<tooltip>
                      				<Tooltip anchorLocation="WINDOW_TOP_LEFT" text="%Tooltip.Share" />
					  			</tooltip>
            				</Button>
            				<Button onAction="#onCancel" text="%Button.Cancel" BorderPane.alignment="CENTER" styleClass="cancelButton" />
            				<CheckBox fx:id="immutableOnServer" mnemonicParsing="false" text="%NeverDeleteVersionOnServer" />
            			</children>
         			</HBox>
               </right>
            </BorderPane>
  			</children>
		</VBox>
	</bottom>
</BorderPane>
