<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox>
                    <HBox styleClass="background-dark-grey">
                        <padding>
                            <Insets left="15" right="15" />
                        </padding>
                        <children>
                            <Label text="%RecordHistory" styleClass="headingLevel5" />
                        </children>
                    </HBox>
                    <HBox HBox.hgrow="ALWAYS" alignment="CENTER">
                        <ComboBox fx:id="historyItems" onAction="#onShowVersion" promptText="%BulletinDetailsHistory" maxWidth="Infinity" HBox.hgrow="ALWAYS" styleClass="dropdown-list" />
                    </HBox>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
